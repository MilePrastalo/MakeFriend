<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.makefriendandroid.fragments.home.HomeFragment"
        android:label="home_fragment"
        tools:layout="@layout/home_fragment" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.makefriendandroid.fragments.login.LoginFragment"
        android:label="login_fragment"
        tools:layout="@layout/login_fragment" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.makefriendandroid.fragments.register.RegistrationFragment"
        android:label="registration_fragment"
        tools:layout="@layout/registration_fragment" >
        <action
            android:id="@+id/action_registrationFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registrationFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/allMessagesFragment"
        android:name="com.example.makefriendandroid.fragments.messages.AllMessagesFragment"
        android:label="all_messages_fragment"
        tools:layout="@layout/all_messages_fragment" >
        <action
            android:id="@+id/action_allMessagesFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.makefriendandroid.fragments.messages.ChatFragment"
        android:label="chat_fragment"
        tools:layout="@layout/chat_fragment" >
        <argument
            android:name="friendId"
            app:argType="long"
            android:defaultValue="0L" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.makefriendandroid.fragments.profile.ProfileFragment"
        android:label="profile_fragment"
        tools:layout="@layout/profile_fragment" >
        <action
            android:id="@+id/action_profileFragment_to_profileTraitsFragment"
            app:destination="@id/profileTraitsFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileTraitsFragment"
        android:name="com.example.makefriendandroid.fragments.profile.ProfileTraitsFragment"
        android:label="profile_traits_fragment"
        tools:layout="@layout/profile_traits_fragment" >
        <action
            android:id="@+id/action_profileTraitsFragment_to_interestsFragment"
            app:destination="@id/interestsFragment" />
    </fragment>
    <fragment
        android:id="@+id/interestsFragment"
        android:name="com.example.makefriendandroid.fragments.profile.InterestsFragment"
        android:label="interests_fragment"
        tools:layout="@layout/interests_fragment" />
    <fragment
        android:id="@+id/friendsFragment"
        android:name="com.example.makefriendandroid.fragments.friends.FriendsFragment"
        android:label="friends_fragment"
        tools:layout="@layout/friends_fragment" />
</navigation>